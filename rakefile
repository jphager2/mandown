require 'rake'
require 'active_record'

require_relative 'db/environment'

task :test do
  puts `rspec ./spec/`
end

namespace :db do
   
  task :create do
    Mangdown::DB.establish_base_connection 
    Mangdown::DB.create_database
  end

  task :drop do
    Mangdown::DB.establish_base_connection 
    Mangdown::DB.drop_database 
  end

  task :migrate do
    Mangdown::DB.establish_connection 
    Mangdown::DB.migrate
  end
end

task default: [:test]

