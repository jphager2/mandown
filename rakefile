require 'rake'
require 'active_record'

task :test do
  puts `rspec ./spec/`
end

namespace :db do
  config = {
    "username"  => ENV["PG_USER"],
    "password"  => ENV["PG_PASS"],
    "database"  => 'mangdown',
    "pool"      => "5",
    "reconnect" => "false",
    "encoding"  => "utf-8",
    "adapter"   => "postgresql",
  }

  task :create do
    ActiveRecord::Base.establish_connection(
      config.merge(
        {
          "database" => "postgres",
          "schema_search_path" => "public",
        }
      )
    )

    ActiveRecord::Base.connection.create_database(
      config["database"],
      config,
    )

    ActiveRecord::Base.establish_connection(config)
  end

  task :drop do
    ActiveRecord::Base.establish_connection(
      config.merge(
        {
          "database" => "postgres",
          "schema_search_path" => "public",
        }
      )
    )

    ActiveRecord::Base.connection.drop_database(
      config["database"],
    )
  end
end

task default: [:test]

